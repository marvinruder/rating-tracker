{
  "name": "@rating-tracker/backend",
  "version": "4.2.1",
  "title": "Rating Tracker Backend",
  "author": {
    "name": "Marvin A. Ruder",
    "email": "ratingtracker@mruder.dev",
    "url": "https://mruder.dev"
  },
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev:run": "node --env-file=.env --watch --enable-source-maps dist/server.cjs",
    "dev:watch": "yarn build --watch",
    "test:watch": "vitest --ui",
    "test": "vitest run --color",
    "prisma:studio": "pnpify prisma studio",
    "prisma:generate": "pnpify prisma generate",
    "prisma:migrate:dev": "pnpify prisma migrate dev",
    "fix:swagger": "mkdir -p dist/public/api-docs && cp ../../.yarn/unplugged/swagger-ui-dist-*/node_modules/swagger-ui-dist/swagger-ui{.css,-bundle.js,-standalone-preset.js} dist/public/api-docs/",
    "build": "esbuild --color=true src/server.ts --bundle --platform=node --format=cjs --sourcemap=linked --sources-content=false --log-override:commonjs-variable-in-esm=silent --outfile=dist/server.cjs",
    "build:logFormatterConfig": "esbuild src/utils/logFormatterConfig.ts --bundle --minify --platform=node --format=cjs --log-override:commonjs-variable-in-esm=silent --outfile=dist/pino-pretty-config.cjs",
    "typecheck": "tsc --noEmit --tsBuildInfoFile $HOME/.cache/rating-tracker/backend.tsbuildinfo",
    "lint": "eslint --color --cache --cache-location $HOME/.cache/rating-tracker/backend.eslintcache --cache-strategy content --max-warnings 0 --ext .ts src/ test/",
    "lint:fix": "yarn lint --fix",
    "postinstall": "yarn prisma:generate && yarn fix:swagger"
  },
  "dependencies": {
    "@prisma/client": "5.9.1",
    "@rating-tracker/commons": "workspace:*",
    "@simplewebauthn/server": "9.0.2",
    "@vitest/coverage-v8": "1.2.2",
    "@xmldom/xmldom": "0.8.10",
    "@yarnpkg/pnpify": "4.0.1",
    "chalk": "5.3.0",
    "concurrently": "8.2.2",
    "cookie-parser": "1.4.6",
    "cron": "3.1.6",
    "esbuild": "0.20.0",
    "express": "4.18.2",
    "express-async-errors": "3.1.1",
    "express-openapi-validator": "5.1.6",
    "express-rate-limit": "7.1.5",
    "fast-glob": "3.3.2",
    "luxon": "3.4.4",
    "pino": "8.18.0",
    "pino-pretty": "10.3.1",
    "prisma": "5.9.1",
    "redis": "4.6.13",
    "redis-om": "0.4.3",
    "response-time": "2.3.2",
    "supertest": "6.3.4",
    "swagger-ui-dist": "5.11.7",
    "swagger-ui-express": "5.0.0",
    "vite": "5.1.3",
    "vitest": "1.2.2",
    "xpath-ts2": "1.4.2"
  },
  "devDependencies": {
    "@types/cookie-parser": "1.4.6",
    "@types/express": "4.17.21",
    "@types/luxon": "3.4.2",
    "@types/node": "20.11.19",
    "@types/response-time": "2.3.8",
    "@types/supertest": "6.0.2",
    "@types/swagger-ui-express": "4.1.6",
    "@typescript-eslint/eslint-plugin": "7.0.1",
    "@typescript-eslint/parser": "7.0.1",
    "@vitest/ui": "1.2.2",
    "eslint": "8.56.0",
    "eslint-config-google": "0.14.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-i": "2.29.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsdoc": "48.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "prettier": "3.2.5",
    "typescript": "5.3.3"
  }
}