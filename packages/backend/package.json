{
  "name": "@rating-tracker/backend",
  "version": "2.2.0",
  "title": "Rating Tracker Backend",
  "author": {
    "name": "Marvin A. Ruder",
    "url": "https://mruder.dev"
  },
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev:run": "node --watch dist/server.mjs",
    "dev:watch": "yarn build --watch --sourcemap",
    "dev:nginx": "docker compose -f dev/docker-compose.yml up nginx",
    "dev:postgres": "MY_UID=\"$(id -u)\" MY_GID=\"$(id -g)\" docker compose -f dev/docker-compose.yml up postgres",
    "dev:redis": "docker compose -f dev/docker-compose.yml up redis",
    "dev:selenium": "docker compose -f dev/docker-compose.yml up selenium",
    "dev:signal": "docker compose -f dev/docker-compose.yml up signal",
    "dev:tools": "conc --kill-others \"yarn dev:nginx\" \"yarn dev:postgres\" \"yarn dev:redis\" \"yarn dev:selenium\" \"yarn dev:signal\" -n \",,,ﰍ,\" -p \"{name}\" -c #43972A,#336791,#D82C20,#43B02A,#4975E8 --timings",
    "test:watch": "vitest",
    "test": "vitest run --color",
    "test:postgres": "PGPORT=54321 docker compose -f test/docker-compose.yml up --force-recreate -V postgres-test",
    "test:redis": "REDISPORT=63791 docker compose -f test/docker-compose.yml up --force-recreate -V redis-test",
    "test:tools": "conc --kill-others \"yarn test:postgres\" \"yarn test:redis\" -n \",\" -p \"{name}\" -c #336791,#D82C20 --timings",
    "prisma:studio": "pnpify prisma studio",
    "prisma:generate": "pnpify prisma generate",
    "prisma:migrate:dev": "pnpify prisma migrate dev",
    "build": "esbuild --color=true src/server.ts --bundle --platform=node --format=esm --legal-comments=none --banner:js=\"import __path from'path';import{createRequire as __createRequire}from'module';import{fileURLToPath}from'url';const require=__createRequire(import.meta.url),__filename=fileURLToPath(import.meta.url),__dirname=__path.dirname(__filename);\" --outfile=dist/server.mjs",
    "typecheck": "tsc --noEmit",
    "lint:fix": "eslint --cache --ext .ts src/ --fix"
  },
  "dependencies": {
    "@prisma/client": "5.2.0",
    "@rating-tracker/commons": "workspace:*",
    "@simplewebauthn/server": "8.0.1",
    "axios": "1.5.0",
    "chalk": "5.3.0",
    "cookie-parser": "1.4.6",
    "cron": "2.4.3",
    "date-fns": "2.30.0",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "express-async-errors": "3.1.1",
    "express-openapi-validator": "5.0.6",
    "express-rate-limit": "6.9.0",
    "pino": "8.15.0",
    "pino-pretty": "10.2.0",
    "redis": "4.6.8",
    "redis-om": "0.4.2",
    "response-time": "2.3.2",
    "selenium-webdriver": "4.11.1",
    "swagger-ui-dist": "5.4.2",
    "swagger-ui-express": "5.0.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "1.4.3",
    "@types/express": "4.17.17",
    "@types/node": "20.5.6",
    "@types/selenium-webdriver": "4.1.16",
    "@types/supertest": "2.0.12",
    "@types/swagger-ui-express": "4.1.3",
    "@typescript-eslint/eslint-plugin": "6.4.1",
    "@typescript-eslint/parser": "6.4.1",
    "@vitest/coverage-v8": "0.34.1",
    "@yarnpkg/pnpify": "3.1.6",
    "concurrently": "8.2.1",
    "esbuild": "0.19.2",
    "eslint": "8.48.0",
    "eslint-config-google": "0.14.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-jsdoc": "46.5.0",
    "eslint-plugin-prettier": "5.0.0",
    "glob": "10.3.3",
    "prettier": "3.0.2",
    "prisma": "5.2.0",
    "supertest": "6.3.3",
    "typescript": "5.2.2",
    "vite": "4.4.9",
    "vitest": "0.34.1"
  }
}
