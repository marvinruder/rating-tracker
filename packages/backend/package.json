{
  "name": "@rating-tracker/backend",
  "version": "2.5.0",
  "title": "Rating Tracker Backend",
  "author": {
    "name": "Marvin A. Ruder",
    "url": "https://mruder.dev"
  },
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev:run": "node --env-file=.env --watch --enable-source-maps dist/server.mjs",
    "dev:watch": "yarn build --watch",
    "dev:nginx": "docker compose -f dev/docker-compose.yml up nginx",
    "dev:postgres": "MY_UID=\"$(id -u)\" MY_GID=\"$(id -g)\" docker compose -f dev/docker-compose.yml up postgres",
    "dev:redis": "docker compose -f dev/docker-compose.yml up redis",
    "dev:signal": "docker compose -f dev/docker-compose.yml up signal",
    "dev:tools": "conc --kill-others \"yarn dev:nginx\" \"yarn dev:postgres\" \"yarn dev:redis\" \"yarn dev:signal\" -n \",,,\" -p \"{name}\" -c #43972A,#336791,#D82C20,#4975E8 --timings",
    "test:watch": "vitest",
    "test": "vitest run --color",
    "test:postgres": "PGPORT=54321 docker compose -f test/docker-compose.yml up --force-recreate -V postgres-test",
    "test:redis": "REDISPORT=63791 docker compose -f test/docker-compose.yml up --force-recreate -V redis-test",
    "test:tools": "conc --kill-others \"yarn test:postgres\" \"yarn test:redis\" -n \",\" -p \"{name}\" -c #336791,#D82C20 --timings",
    "prisma:studio": "pnpify prisma studio",
    "prisma:generate": "pnpify prisma generate",
    "prisma:migrate:dev": "pnpify prisma migrate dev",
    "build": "esbuild --color=true src/server.ts --bundle --platform=node --format=esm --legal-comments=none --sourcemap=linked --sources-content=false --banner:js=\"import __path from'path';import{createRequire as __createRequire}from'module';import{fileURLToPath}from'url';const require=__createRequire(import.meta.url),__filename=fileURLToPath(import.meta.url),__dirname=__path.dirname(__filename);\" --log-override:commonjs-variable-in-esm=silent --outfile=dist/server.mjs",
    "build:logFormatterConfig": "esbuild src/utils/logFormatterConfig.ts --bundle --minify --platform=node --format=cjs --legal-comments=none --log-override:commonjs-variable-in-esm=silent --outfile=dist/pino-pretty-config.cjs",
    "typecheck": "tsc --noEmit --tsBuildInfoFile $HOME/.cache/rating-tracker/backend.tsbuildinfo",
    "lint": "eslint --color --cache --cache-location $HOME/.cache/rating-tracker/backend.eslintcache --cache-strategy content --max-warnings 0 --ext .ts src/ test/",
    "lint:fix": "yarn lint --fix"
  },
  "dependencies": {
    "@prisma/client": "5.5.2",
    "@rating-tracker/commons": "workspace:*",
    "@simplewebauthn/server": "8.3.5",
    "@xmldom/xmldom": "0.8.10",
    "axios": "1.6.1",
    "chalk": "5.3.0",
    "cookie-parser": "1.4.6",
    "cron": "3.1.6",
    "date-fns": "2.30.0",
    "express": "4.18.2",
    "express-async-errors": "3.1.1",
    "express-openapi-validator": "5.1.0",
    "express-rate-limit": "7.1.4",
    "fast-glob": "3.3.2",
    "pino": "8.16.1",
    "pino-pretty": "10.2.3",
    "redis": "4.6.10",
    "redis-om": "0.4.3",
    "response-time": "2.3.2",
    "swagger-ui-dist": "5.9.3",
    "swagger-ui-express": "5.0.0",
    "xpath-ts2": "1.4.2"
  },
  "devDependencies": {
    "@types/cookie-parser": "1.4.6",
    "@types/express": "4.17.21",
    "@types/node": "20.9.0",
    "@types/response-time": "2.3.8",
    "@types/supertest": "2.0.16",
    "@types/swagger-ui-express": "4.1.6",
    "@typescript-eslint/eslint-plugin": "6.10.0",
    "@typescript-eslint/parser": "6.10.0",
    "@vitest/coverage-v8": "0.34.6",
    "@yarnpkg/pnpify": "4.0.0",
    "concurrently": "8.2.2",
    "esbuild": "0.19.5",
    "eslint": "8.53.0",
    "eslint-config-google": "0.14.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-jsdoc": "46.9.0",
    "eslint-plugin-prettier": "5.0.1",
    "prettier": "3.0.3",
    "prisma": "5.5.2",
    "supertest": "6.3.3",
    "typescript": "5.2.2",
    "vite": "4.5.0",
    "vitest": "0.34.6"
  }
}
