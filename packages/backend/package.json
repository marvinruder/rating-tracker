{
  "name": "@rating-tracker/backend",
  "version": "1.0.0",
  "title": "Rating Tracker Backend",
  "author": {
    "name": "Marvin A. Ruder",
    "url": "https://mruder.dev"
  },
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev:ts-node": "node --loader ts-node/esm --loader ../../.pnp.loader.mjs --loader ../../.pnp-ts.loader.mjs --watch --watch-preserve-output ./src/server.ts",
    "dev:nginx": "docker compose -f dev/docker-compose.yml up nginx",
    "dev:postgres": "MY_UID=\"$(id -u)\" MY_GID=\"$(id -g)\" docker compose -f dev/docker-compose.yml up postgres",
    "dev:redis": "docker compose -f dev/docker-compose.yml up redis",
    "dev:selenium": "docker compose -f dev/docker-compose.yml up selenium",
    "dev:signal": "docker compose -f dev/docker-compose.yml up signal",
    "dev:tools": "conc --kill-others \"yarn dev:nginx\" \"yarn dev:postgres\" \"yarn dev:redis\" \"yarn dev:selenium\" \"yarn dev:signal\" -n \",,,ﰍ,\" -p \"{name}\" -c #43972A,#336791,#D82C20,#43B02A,#4975E8 --timings",
    "test:watch": "yarn test:prisma:migrate:init && vitest",
    "test": "vitest run --coverage --color",
    "test:postgres": "PGPORT=54321 docker compose -f test/docker-compose.yml up --force-recreate -V postgres-test",
    "test:redis": "REDISPORT=63791 docker compose -f test/docker-compose.yml up --force-recreate -V redis-test",
    "test:tools": "conc --kill-others \"yarn test:postgres\" \"yarn test:redis\" -n \",\" -p \"{name}\" -c #336791,#D82C20 --timings",
    "test:prisma:migrate:init": "env $(cat test/.env) pnpify prisma migrate dev --name init",
    "prisma:generate": "pnpify prisma generate",
    "prisma:migrate:dev": "pnpify prisma migrate dev",
    "build": "tsc --project tsconfig.build.json && mkdir -p dist/prisma && cp -rf prisma/* dist/prisma",
    "lint": "eslint --cache --ext .ts src/",
    "lint:fix": "eslint --cache --ext .ts src/ --fix"
  },
  "dependencies": {
    "@prisma/client": "4.14.0",
    "@rating-tracker/commons": "workspace:*",
    "@simplewebauthn/server": "7.2.0",
    "axios": "1.4.0",
    "chalk": "5.2.0",
    "cookie-parser": "1.4.6",
    "cron": "2.3.0",
    "date-fns": "2.30.0",
    "dotenv": "16.0.3",
    "express": "4.18.2",
    "express-async-errors": "3.1.1",
    "express-openapi-validator": "5.0.4",
    "express-rate-limit": "6.7.0",
    "pino": "8.14.1",
    "pino-pretty": "10.0.0",
    "redis": "4.6.6",
    "redis-om": "0.3.6",
    "response-time": "2.3.2",
    "selenium-webdriver": "4.9.2",
    "swagger-ui-express": "4.6.3"
  },
  "devDependencies": {
    "@types/cron": "2.0.1",
    "@types/express": "4.17.17",
    "@types/node": "18.16.9",
    "@types/selenium-webdriver": "4.1.14",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.59.5",
    "@typescript-eslint/parser": "5.59.5",
    "@vitest/coverage-istanbul": "0.31.0",
    "@yarnpkg/pnpify": "3.1.6",
    "concurrently": "8.0.1",
    "eslint": "8.40.0",
    "eslint-config-google": "0.14.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-jsdoc": "44.2.3",
    "eslint-plugin-prettier": "4.2.1",
    "glob": "10.2.4",
    "prettier": "2.8.8",
    "prisma": "4.14.0",
    "supertest": "6.3.3",
    "ts-node": "10.9.1",
    "typescript": "5.0.4",
    "vite": "4.3.6",
    "vitest": "0.31.0"
  }
}
