{
  "name": "rating-tracker-backend",
  "version": "0.1.0",
  "title": "Rating Tracker",
  "author": {
    "name": "Marvin A. Ruder",
    "url": "https://mruder.dev"
  },
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev:tsc": "tsc -w --preserveWatchOutput",
    "dev:nginx": "docker compose -f local-dev/docker-compose.yml up nginx",
    "dev:redis": "docker compose -f local-dev/docker-compose.yml up redis",
    "dev:selenium": "docker compose -f local-dev/docker-compose.yml up selenium",
    "dev:signal": "docker compose -f local-dev/docker-compose.yml up signal",
    "dev:tools": "conc --kill-others \"yarn dev:nginx\" \"yarn dev:redis\" \"yarn dev:selenium\" \"yarn dev:signal\" -n \",,ﰍ,\" -p \"{name}\" -c #43972A,#D82C20,#43B02A,#4975E8 --timings",
    "dev:node": "node --watch dist/src/server.js",
    "test:watch": "yarn node --experimental-vm-modules $(yarn bin jest) --watch --runInBand",
    "start": "node dist/src/server.js",
    "build": "tsc --project tsconfig.build.json",
    "test": "yarn node --experimental-vm-modules $(yarn bin jest) --runInBand --coverage",
    "lint": "eslint --ext .jsx,.js,.tsx,.ts src/",
    "lint:fix": "eslint --ext .jsx,.js,.tsx,.ts src/ --fix"
  },
  "dependencies": {
    "@simplewebauthn/server": "7.0.0",
    "axios": "1.2.6",
    "chalk": "5.2.0",
    "cookie-parser": "1.4.6",
    "cron": "2.2.0",
    "date-fns": "2.29.3",
    "dotenv": "16.0.3",
    "express": "4.18.2",
    "express-async-errors": "3.1.1",
    "express-openapi-validator": "5.0.1",
    "express-rate-limit": "6.7.0",
    "pino": "8.8.0",
    "pino-pretty": "9.1.1",
    "rating-tracker-commons": "workspace:*",
    "redis": "4.6.2",
    "redis-om": "0.3.6",
    "response-time": "2.3.2",
    "selenium-webdriver": "4.8.0",
    "swagger-ui-express": "4.6.0",
    "typescript": "4.9.4"
  },
  "devDependencies": {
    "@jest/globals": "29.4.1",
    "@types/cron": "2.0.0",
    "@types/express": "4.17.16",
    "@types/jest": "29.4.0",
    "@types/node": "18.11.18",
    "@types/selenium-webdriver": "4.1.10",
    "@types/supertest": "2.0.12",
    "@types/validator": "13.7.11",
    "@typescript-eslint/eslint-plugin": "5.49.0",
    "@typescript-eslint/parser": "5.49.0",
    "concurrently": "7.6.0",
    "eslint": "8.33.0",
    "eslint-config-google": "0.14.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-jsdoc": "39.6.9",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "29.4.1",
    "prettier": "2.8.3",
    "supertest": "6.3.3",
    "ts-jest": "29.0.5"
  }
}
