{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:enableMajor"
  ],
  "timezone": "UTC",
  "schedule": [
    "* 18 * * *"
  ],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 2,
  "automerge": true,
  "automergeType": "pr",
  "platformAutomerge": true,
  "automergeSchedule": [
    "* 18 * * *"
  ],
  "assigneesFromCodeOwners": true,
  "updateLockFiles": true,
  "postUpdateOptions": [
    "yarnDedupeHighest"
  ],
  "rangeStrategy": "pin",
  "packageRules": [
    {
      "groupName": "Node.js",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "node"
      ],
      "versioning": "docker"
    },
    {
      "groupName": "Linting and Formatting Tools",
      "matchPackageNames": [
        "/eslint/",
        "/prettier/"
      ]
    },
    {
      "groupName": "WebAuthn",
      "matchPackageNames": [
        "@simplewebauthn/**"
      ]
    },
    {
      "groupName": "Type Definitions",
      "matchPackageNames": [
        "@types/**"
      ]
    }
  ]
}
